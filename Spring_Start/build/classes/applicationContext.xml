<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
		<!-- 通过bean元素声明需要Spring创建的实例。并通过id水箱那个为该实例指定一个名称，以便再程序中使用 -->
		<bean id="users" class="com.hxd.spring.Users" >
		<!-- property 元素用来为实例的属性赋值，自处利用率反射的原理 调用其set()方法实现复制操作 -->
		<property name="name">
			<value>suanyun</value>
		</property>
		<property name="address" value="hefei" ></property>
		
			<property name="memo" value="This is My first Spring project!" ></property>
		</bean>
	
</beans>